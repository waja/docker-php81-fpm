{
  "$schema": "https://docs.renovatebot.com/renovate-schema.json",
  "extends": ["config:recommended", "docker:pinDigests"],
  "packageRules": [
    {
      "matchFileNames": [".github/workflows/**"],
      "pinDigests": false
    },
    {
      "matchDatasources": ["docker"],
      "matchPackageNames": ["php"],
      "allowedVersions": "<8.2"
    }
  ]
}
